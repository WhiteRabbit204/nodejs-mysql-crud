<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group p-1">
                            <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="title" autofocus>
                        </div>
                        <div class="form-group p-1">
                            <input type="url" value="{{link.url}}" name="url" class="form-control" placeholder="Url">
                        </div>
                        <div class="form-group p-1">
                            <textarea name="description" rows="2" class="form-control p-1" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <div class="form-group p-1">
                            <button class="form-control btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>